<!DOCTYPE html>
<html>
<head>
  <title>TrelloClone</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="container">
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li class="error"><%= error %></li>
    <% end %>
  </ul>
<% end %>

<ul class="nav nav-pills">
  <li><a href="" class="btn btn-primary">Back To Index</a></li>
  <% if current_user %>
    <li><%= link_to "Logout", session_url, method: :delete %></li>
  <% else %>
    <li><a class="btn btn-danger" href="/session/new">Log In</a></li>
    <li><a href="/users/new" class="btn btn-warning">Sign Up</a></li>
  <% end %>
</ul>
<%= yield %>
<div class="trello">
</div>

</body>
</html>
